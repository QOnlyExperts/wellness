{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
    "skipLibCheck": true,     // ðŸ‘ˆ Evita fallos con librerÃ­as sin tipos
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
